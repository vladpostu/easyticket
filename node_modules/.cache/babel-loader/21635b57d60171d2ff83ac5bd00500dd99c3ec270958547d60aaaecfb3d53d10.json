Id,\n                }\n            })\n            } catch(error) {\n              console.log(error);\n            }\n        },\n        async recuperaBiglietto() {\n\n            const partecipantiRef = collection(db, \"eventi\", this.eventoId, \"partecipanti\");\n\n            const q = query(\n                partecipantiRef,\n                where(\"nome\", \"==\", this.nome),\n                where(\"cognome\", \"==\", this.cognome),\n                where(\"data_di_nascita\", \"==\", this.data_di_nascita)\n            );\n\n            const snapshot = await getDocs(q);\n\n            if (!snapshot.empty) {\n                this.partecipanteId = snapshot.id;\n                this.$router.push({\n                    name: \"PartecipanteView\",\n                    params: {\n                        eventoId: this.eventoId,\n                        partecipanteId: snapshot.docs[0].id,\n                    }\n\n                })\n            }\n        }\n    }\n}\n</script>"],"mappings":";;EACOA,KAAK,EAAC;AAAY;;EAChBA,KAAK,EAAC;AAAS;;;EAECA,KAAK,EAAC;;;;EAGlBA,KAAK,EAAC;AAAa;;EAClBA,KAAK,EAAC;AAAe;;EAEtBA,KAAK,EAAC;AAAa;;EAEjBA,KAAK,EAAC;AAAW;;EAInBA,KAAK,EAAC;AAAgB;;EAEtBA,KAAK,EAAC;AAAoB;;EAI3BA,KAAK,EAAC;AAAmB;;EACzBA,KAAK,EAAC;AAAY;;EAEjBA,KAAK,EAAC;AAAM;;EAKZA,KAAK,EAAC;AAAM;;EAKZA,KAAK,EAAC;AAAM;;EAadA,KAAK,EAAC;AAAW;;uBA/C1BC,mBAAA,CAmDM,OAnDNC,UAmDM,GAlDJC,mBAAA,CAiDM,OAjDNC,UAiDM,GA/COC,KAAA,CAAAC,MAAM,I,cAAjBL,mBAAA,CAgBM,OAhBNM,UAgBM,GAfJJ,mBAAA,CAAqC;IAA/BK,GAAG,EAAEH,KAAA,CAAAI,eAAe;IAAEC,GAAG,EAAC;uCAEhCP,mBAAA,CAYM,OAZNQ,UAYM,GAXJR,mBAAA,CAAuD,MAAvDS,UAAuD,EAAAC,gBAAA,CAA1BR,KAAA,CAAAC,MAAM,CAACQ,WAAW,kBAE/CX,mBAAA,CAAyD,KAAzDY,UAAyD,EAAAF,gBAAA,CAA/BG,QAAA,CAAAC,WAAW,CAACZ,KAAA,CAAAC,MAAM,CAACY,IAAI,mBAEjDf,mBAAA,CAEM,OAFNgB,UAEM,EAAAN,gBAAA,CADDO,IAAA,CAAAC,EAAE,UAAS,GAAC,GAAAR,gBAAA,CAAGR,KAAA,CAAAiB,cAAc,IAAG,GAAC,GAAAT,gBAAA,CAAGO,IAAA,CAAAC,EAAE,0BAG3ClB,mBAAA,CAAkD,KAAlDoB,UAAkD,EAAAV,gBAAA,CAArBR,KAAA,CAAAC,MAAM,CAACkB,OAAO,kBAE3CrB,mB