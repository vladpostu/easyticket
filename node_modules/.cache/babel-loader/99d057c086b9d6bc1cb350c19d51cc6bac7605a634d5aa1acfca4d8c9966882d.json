play: flex;\n  flex-direction: column;\n  align-items: center;\n}\n\n.input-group {\n  width: 100%;\n  display: flex;\n  flex-direction: column;\n  margin-bottom: 18px;\n}\n\n.input-group label {\n  font-weight: 600;\n  color: #0C2B4E;\n  margin-bottom: 6px;\n}\n\n.input-group input {\n  border: 1px solid #ccc;\n  border-radius: 6px;\n  padding: 10px 12px;\n  font-size: 1rem;\n  transition: all 0.2s;\n}\n\n.input-group input:focus {\n  outline: none;\n  border-color: #0C2B4E;\n  box-shadow: 0 0 5px rgba(12, 43, 78, 0.3);\n}\n\n.form-text {\n  font-size: 0.9rem;\n  color: #666;\n  margin-bottom: 15px;\n  text-align: center;\n}\n\n.btn-primary {\n  background-color: #0C2B4E;\n  border: none;\n  color: white;\n  padding: 10px 26px;\n  border-radius: 8px;\n  font-weight: 600;\n  cursor: pointer;\n  transition: background-color 0.25s ease;\n}\n\n.btn-primary:hover {\n  background-color: #174170;\n}\n\n/* SCANNER */\n.scanner-section {\n  margin-top: 40px;\n  text-align: center;\n}\n\n/* PARTECIPANTE CARD */\n.partecipante-card {\n  background-color: #1D546C;\n  color: #fff;\n  margin-top: 40px;\n  padding: 30px;\n  border-radius: 12px;\n  width: 100%;\n  max-width: 500px;\n  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.25);\n}\n\n.partecipante-card h3 {\n  font-size: 1.4rem;\n  font-weight: 700;\n  margin-bottom: 10px;\n}\n\n.nome {\n  font-size: 1.3rem;\n  font-weight: 600;\n  margin-bottom: 6px;\n}\n\n.presenza {\n  margin-top: 25px;\n}\n\n.check-text {\n  font-size: 1rem;\n  margin-bottom: 12px;\n}\n\n.btn-confirm {\n  background-color: #3CB371;\n  color: white;\n  border: none;\n  padding: 10px 24px;\n  border-radius: 8px;\n  font-weight: 600;\n  cursor: pointer;\n  transition: background-color 0.25s ease;\n}\n\n.btn-confirm:hover {\n  background-color: #2e8b57;\n}\n\n/* ALERT */\n.alert {\n  padding: 12px 18px;\n  border-radius: 6px;\n  background-color: #ffcc00;\n  color: #222;\n  font-weight: 600;\n}\n\n@media (max-width: 600px) {\n  .login-card,\n  .partecipante-card {