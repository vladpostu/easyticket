.btn-primary:hover {\n  background-color: #174170;\n}\n\n/* --- CENTRATO --- */\n.btn-center {\n  display: block;\n  margin: 30px auto 0 auto;\n  width: 50%;\n  text-align: center;\n}\n\n/* --- RESPONSIVE --- */\n@media (max-width: 500px) {\n  .form-container {\n    padding: 25px 20px;\n  }\n\n  .btn-primary {\n    width: 100%;\n    padding: 10px;\n    font-size: 0.9rem;\n  }\n}\n</style>\n\n\n\n<script>\nimport { collection, addDoc } from 'firebase/firestore';\nimport { db, storage } from '../../firebase/firebase'\nimport { ref, uploadBytes, getDownloadURL } from 'firebase/storage'\n\nexport default {\n    name: 'AddEvento',\n    data() {\n        return {\n            nome_evento: '',\n            data: '',\n            emailOrganizzatore: \"\",\n            idOrganizzatore: \"\",\n            aliasEvento: \"\",\n            passwordConvalidatori: \"\",\n            imgCopertina: null, \n        }\n    },\n    methods: {\n        async inserisciEvento() {\n            this.emailOrganizzatore = localStorage.getItem(\"organizzatoreEmail\");\n            this.idOrganizzatore = localStorage.getItem(\"organizzatoreId\");\n   \n            let imgCopertinaURL = \"\";\n\n            if(this.imgCopertina) {\n                const storageRef = ref(storage, `copertine/${this.imgCopertina.name}`)\n                await uploadBytes(storageRef, this.imgCopertina)\n                imgCopertinaURL = await getDownloadURL(storageRef)\n            }\n\n            const nuovoEvento = {\n                nome_evento: this.nome_evento,\n                data: this.data,\n                emailOrganizzatore: this.emailOrganizzatore,\n                idOrganizzatore: this.idOrganizzatore,\n                aliasEvento: this.nome_evento.slice(0, 3) + this.data,\n                passwordConvalidatori: this.passwordConvalidatori,\n                imgCopertina: imgCopertinaURL,\n            }\n\n\n            try {\n                await addDoc(collection(db, 'eventi'), nuovoEvento)\n                this.aliasEvento = nuovoEvento.aliasEvento\n                this.data = ''\n                this.nome_evento = ''\n                this.$emit('eventoInserito')\n            } catch(error) {\n                console.log(error)\n            }\n        },\n        onFileChange(e) {\n            this.imgCopertina = e.target.files[0];\n        }\n    }\n}\n</script>"],"mappings":"AAiMA,SAASA,UAAU,EAAEC,MAAK,QAAS,oBAAoB;AACvD,SAASC,EAAE,EAAEC,OAAM,QAAS,yBAAwB;AACpD,SAASC,GAAG,EAAEC,WAAW,EAAEC,cAAa,QAAS,kBAAiB;AAElE,eAAe;EACXC,IAAI,EAAE,WAAW;EACjBC,IAAIA,CAAA,EAAG;IACH,OAAO;MACHC,WAAW,EAAE,EAAE;MACfD,IAAI,EAAE,EAAE;MACRE,kBAAkB,EAAE,EAAE;MACtBC,eAAe,EAAE,EAAE;MACnBC,WAAW,EAAE,EAAE;MACfC,qBAAqB,EAAE,EAAE;MACzBC,YAAY,EAAE;IAClB;EACJ,CAAC;EACDC,OAAO,EAAE;IACL,MAAMC,eAAeA,CAAA,EAAG;MACpB,IAAI,CAACN,kBAAiB,GAAIO,YAAY,CAACC,OAAO,CAAC,oBAAoB,CAAC;MACpE,IAAI,CAACP,eAAc,GAAIM,YAAY,CAACC,OAAO,CAAC,iBAAiB,CAAC;MAE9D,IAAIC,eAAc,GAAI,EAAE;MAExB,IAAG,IAAI,CAACL,YAAY,EAAE;QAClB,MAAMM,UAAS,GAAIhB,GAAG,CAACD,OAAO,EAAE,aAAa,IAAI,CAACW,YAAY,CAACP,IAAI,EAAE;QACrE,MAAMF,WAAW,CAACe,UAAU,EAAE,IAAI,CAACN,YAAY;QAC/CK,eAAc,GAAI,MAAMb,cAAc,CAACc,UAAU;MACrD;MAEA,MAAMC,WAAU,GAAI;QAChBZ,WAAW,EAAE,IAAI,CAACA,WAAW;QAC7BD,IAAI,EAAE,IAAI,CAACA,IAAI;QACfE,kBAAkB,EAAE,IAAI,CAACA,kBAAkB;QAC3CC,eAAe,EAAE,IAAI,CAACA,eAAe;QACrCC,WAAW,EAAE,IAAI,CAACH,WAAW,CAACa,KAAK,CAAC,CAAC,EAAE,CAAC,IAAI,IAAI,CAACd,IAAI;QACrDK,qBAAqB,EAAE,IAAI,CAACA,qBAAqB;QACjDC,YAAY,EAAEK;MAClB;MAGA,IAAI;QACA,MAAMlB,MAAM,CAACD,UAAU,CAACE,EAAE,EAAE,QAAQ,CAAC,EAAEmB,WAAW;QAClD,IAAI,CAACT,WAAU,GAAIS,WAAW,CAACT,WAAU;QACzC,IAAI,CAACJ,IAAG,GAAI,EAAC;QACb,IAAI,CAACC,WAAU,GAAI,EAAC;QACpB,IAAI,CAACc,KAAK,CAAC,gBAAgB;MAC/B,EAAE,OAAMC,KAAK,EAAE;QACXC,OAAO,CAACC,GAAG,CAACF,KAAK;MACrB;IACJ,CAAC;IACDG,YAAYA,CAACC,CAAC,EAAE;MACZ,IAAI,CAACd,YAAW,GAAIc,CAAC,CAACC,MAAM,CAACC,KAAK,CAAC,CAAC,CAAC;IACzC;EACJ;AACJ","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}