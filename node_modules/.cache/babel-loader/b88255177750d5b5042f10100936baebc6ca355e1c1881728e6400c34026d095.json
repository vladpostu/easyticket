{"ast":null,"code":"import { db } from '../../firebase/firebase';\nimport { collection, query, where, getDocs } from 'firebase/firestore';\nimport ApriFotocamera from '@/components/ApriFotocamera.vue';\nexport default {\n  name: \"AreaConvalidatore\",\n  data() {\n    return {\n      isLogged: null,\n      evento: \"\",\n      //Evento inteso come aliasEvento su AddEvento\n      password: \"\",\n      idPartecipante: \"\"\n    };\n  },\n  components: {\n    ApriFotocamera\n  },\n  beforeMount() {\n    if (localStorage.getItem(\"convalidatoreLogged\")) {\n      this.isLogged = true;\n    }\n  },\n  methods: {\n    async convalidatoreLogin() {\n      const q = query(collection(db, \"eventi\"), where(\"aliasEvento\", \"==\", this.evento), where(\"passwordConvalidatori\", \"==\", this.password));\n      const snapshot = await getDocs(q);\n      if (!snapshot.empty) {\n        localStorage.setItem(\"convalidatoreEvento\", this.evento);\n        localStorage.setItem(\"convalidatorePassword\", this.password);\n        localStorage.setItem(\"convalidatoreLogged\", \"true\");\n        this.isLogged = true;\n      } else {\n        alert(\"credenziali errate\");\n      }\n    },\n    gestisciQR(qrData) {\n      this.idPartecipante = qrData;\n    }\n  }\n};","map":{"version":3,"names":["db","collection","query","where","getDocs","ApriFotocamera","name","data","isLogged","evento","password","idPartecipante","components","beforeMount","localStorage","getItem","methods","convalidatoreLogin","q","snapshot","empty","setItem","alert","gestisciQR","qrData"],"sources":["/Users/vladpostu/Desktop/easyticket/views/area_riservata/AreaConvalidatore.vue"],"sourcesContent":["<template>\n    <div class=\"form\" v-if=\"!isLogged\">\n        {{ isLogged }}\n\n        <input v-model=\"evento\" type=\"text\" placeholder=\"Evento\">\n        <input v-model=\"password\" type=\"text\" placeholder=\"password\">\n        <button @click=\"convalidatoreLogin\">login</button>\n    </div>\n    <div v-if=\"isLogged\">\n        <ApriFotocamera @emitQRCode=\"gestisciQR\"/>\n    </div>\n    <div >\n        <div>Dettagli Partecipante</div>\n        <div>{{ idPartecipante }}</div>\n        <div class=\"conferma_partecipante\">\n            <div>I dati sono corretti?</div>\n            <div class=\"conferma-pulsanti\">\n                <button>Conferma</button>\n                <button>Rifiuta</button>\n            </div>\n        </div>\n    </div>\n</template>\n\n<style>\n    .form {\n        display: flex;\n        flex-direction: column;\n        width: 300px;\n        align-items: center;\n        position: relative;\n        left: 50%;\n        transform: translateX(-50%);\n    }\n\n    .conferma-partecipante {\n        margin-top: 50px;\n    }\n\n\n</style>\n\n<script>\nimport { db } from '../../firebase/firebase';\nimport { collection, query, where, getDocs } from 'firebase/firestore';\nimport ApriFotocamera from '@/components/ApriFotocamera.vue';\n\nexport default {\n    name: \"AreaConvalidatore\",\n    data() {\n        return {\n            isLogged:  null,\n            evento: \"\", //Evento inteso come aliasEvento su AddEvento\n            password: \"\", \n            idPartecipante: \"\"\n        }\n    },\n\n    components: {\n        ApriFotocamera,\n    },\n \n    beforeMount() {\n        if(localStorage.getItem(\"convalidatoreLogged\")) {\n            this.isLogged = true;\n        }\n    },\n    methods: {\n        async convalidatoreLogin() {\n            const q = query(\n                collection(db, \"eventi\"),\n                where(\"aliasEvento\", \"==\", this.evento),\n                where(\"passwordConvalidatori\", \"==\", this.password)\n            );\n\n            const snapshot = await getDocs(q);\n\n            if(!snapshot.empty) {\n                localStorage.setItem(\"convalidatoreEvento\", this.evento);\n                localStorage.setItem(\"convalidatorePassword\", this.password);\n                localStorage.setItem(\"convalidatoreLogged\", \"true\");\n                this.isLogged = true;\n            } else {\n                alert(\"credenziali errate\");\n            }\n        },\n        gestisciQR(qrData) {\n            this.idPartecipante = qrData;\n        }\n    }\n}\n</script>"],"mappings":"AA2CA,SAASA,EAAC,QAAS,yBAAyB;AAC5C,SAASC,UAAU,EAAEC,KAAK,EAAEC,KAAK,EAAEC,OAAM,QAAS,oBAAoB;AACtE,OAAOC,cAAa,MAAO,iCAAiC;AAE5D,eAAe;EACXC,IAAI,EAAE,mBAAmB;EACzBC,IAAIA,CAAA,EAAG;IACH,OAAO;MACHC,QAAQ,EAAG,IAAI;MACfC,MAAM,EAAE,EAAE;MAAE;MACZC,QAAQ,EAAE,EAAE;MACZC,cAAc,EAAE;IACpB;EACJ,CAAC;EAEDC,UAAU,EAAE;IACRP;EACJ,CAAC;EAEDQ,WAAWA,CAAA,EAAG;IACV,IAAGC,YAAY,CAACC,OAAO,CAAC,qBAAqB,CAAC,EAAE;MAC5C,IAAI,CAACP,QAAO,GAAI,IAAI;IACxB;EACJ,CAAC;EACDQ,OAAO,EAAE;IACL,MAAMC,kBAAkBA,CAAA,EAAG;MACvB,MAAMC,CAAA,GAAIhB,KAAK,CACXD,UAAU,CAACD,EAAE,EAAE,QAAQ,CAAC,EACxBG,KAAK,CAAC,aAAa,EAAE,IAAI,EAAE,IAAI,CAACM,MAAM,CAAC,EACvCN,KAAK,CAAC,uBAAuB,EAAE,IAAI,EAAE,IAAI,CAACO,QAAQ,CACtD,CAAC;MAED,MAAMS,QAAO,GAAI,MAAMf,OAAO,CAACc,CAAC,CAAC;MAEjC,IAAG,CAACC,QAAQ,CAACC,KAAK,EAAE;QAChBN,YAAY,CAACO,OAAO,CAAC,qBAAqB,EAAE,IAAI,CAACZ,MAAM,CAAC;QACxDK,YAAY,CAACO,OAAO,CAAC,uBAAuB,EAAE,IAAI,CAACX,QAAQ,CAAC;QAC5DI,YAAY,CAACO,OAAO,CAAC,qBAAqB,EAAE,MAAM,CAAC;QACnD,IAAI,CAACb,QAAO,GAAI,IAAI;MACxB,OAAO;QACHc,KAAK,CAAC,oBAAoB,CAAC;MAC/B;IACJ,CAAC;IACDC,UAAUA,CAACC,MAAM,EAAE;MACf,IAAI,CAACb,cAAa,GAAIa,MAAM;IAChC;EACJ;AACJ","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}