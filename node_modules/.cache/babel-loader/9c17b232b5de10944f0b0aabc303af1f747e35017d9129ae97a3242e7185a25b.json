{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { getDoc, doc } from 'firebase/firestore';\nimport { db, auth } from '../../firebase/firebase';\nimport { signInWithEmailAndPassword } from 'firebase/auth';\nexport default {\n  name: \"OrganizzatoreLogin\",\n  data() {\n    return {\n      email: \"\",\n      password: \"\"\n    };\n  },\n  methods: {\n    async login() {\n      try {\n        const cred = await signInWithEmailAndPassword(auth, this.email, this.password);\n        const userDoc = await getDoc(doc(db, \"organizzatori\", cred.user.uid));\n        console.log(userDoc);\n        localStorage.setItem(\"organizzatoreId\", cred.user.uid);\n        this.$router.push({\n          name: \"AreaOrganizzatore\"\n        });\n      } catch (error) {\n        console.log(error);\n      }\n    }\n  },\n  mounted() {}\n};","map":{"version":3,"names":["getDoc","doc","db","auth","signInWithEmailAndPassword","name","data","email","password","methods","login","cred","userDoc","user","uid","console","log","localStorage","setItem","$router","push","error","mounted"],"sources":["/Users/vladpostu/Desktop/easyticket/views/area_riservata/OrganizzatoreLogin.vue"],"sourcesContent":["\n<template>\n  <div class=\"login-page\">\n    <div class=\"login-card\">\n      <h2 class=\"title\">Accesso Organizzatore</h2>\n\n      <div class=\"form-login\">\n        <div class=\"input-group\">\n          <label for=\"email_organizzatore\">Email</label>\n          <input\n            v-model=\"email\"\n            type=\"email\"\n            id=\"email_organizzatore\"\n            placeholder=\"tuo@esempio.com\"\n            class=\"form-control\"\n          />\n        </div>\n\n        <div class=\"input-group\">\n          <label for=\"password_organizzatore\">Password</label>\n          <input\n            v-model=\"password\"\n            type=\"password\"\n            id=\"password_organizzatore\"\n            placeholder=\"••••••••\"\n            class=\"form-control\"\n          />\n        </div>\n\n        <button class=\"btn-primary\" @click=\"login\">Accedi</button>\n\n        <div class=\"registrati-link\">\n          Non hai un account?\n          <router-link to=\"/area-riservata/organizzatore-registrati\">Registrati</router-link>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<style scoped>\n/* Outer full-page centering */\n.login-page {\n  min-height: calc(100vh - 100px); /* lascia spazio per navbar/header se presente */\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  padding: 30px 16px;\n  background-color: #f6f9fb;\n  box-sizing: border-box;\n  font-family: \"Inter\", system-ui, sans-serif;\n}\n\n/* Card that contains the form */\n.login-card {\n  width: 100%;\n  max-width: 420px;\n  background: #ffffff;\n  border-radius: 12px;\n  padding: 32px;\n  box-shadow: 0 8px 30px rgba(15, 30, 50, 0.06);\n  display: flex;\n  flex-direction: column;\n  align-items: stretch;\n}\n\n/* Title centered */\n.title {\n  margin: 0 0 18px 0;\n  text-align: center;\n  color: #0C2B4E;\n  font-weight: 700;\n  font-size: 1.4rem;\n}\n\n/* Form layout inside the card */\n.form-login {\n  display: flex;\n  flex-direction: column;\n  gap: 14px;\n}\n\n/* Input groups */\n.input-group {\n  display: flex;\n  flex-direction: column;\n  gap: 6px;\n}\n\n.input-group label {\n  font-size: 0.9rem;\n  font-weight: 600;\n  color: #0C2B4E;\n}\n\n/* Inputs */\n.form-control {\n  padding: 10px 12px;\n  border: 1px solid #d7dfe8;\n  border-radius: 8px;\n  font-size: 0.95rem;\n  transition: box-shadow 0.12s ease, border-color 0.12s ease;\n  width: 100%;\n  box-sizing: border-box;\n  color: #102030;\n}\n\n.form-control::placeholder {\n  color: #9aa6b2;\n}\n\n.form-control:focus {\n  outline: none;\n  border-color: #0C2B4E;\n  box-shadow: 0 6px 18px rgba(12, 43, 78, 0.06);\n}\n\n/* Primary button */\n.btn-primary {\n  margin-top: 6px;\n  background-color: #0C2B4E;\n  color: #fff;\n  border: none;\n  padding: 10px 14px;\n  border-radius: 10px;\n  font-weight: 700;\n  cursor: pointer;\n  transition: transform 0.12s ease, background-color 0.12s ease;\n}\n\n.btn-primary:hover {\n  background-color: #174170;\n  transform: translateY(-2px);\n}\n\n/* Registration link */\n.registrati-link {\n  margin-top: 12px;\n  text-align: center;\n  font-size: 0.92rem;\n  color: #334155;\n}\n\n.registrati-link a {\n  color: #0C2B4E;\n  font-weight: 600;\n  text-decoration: none;\n}\n\n.registrati-link a:hover {\n  text-decoration: underline;\n}\n\n/* Responsive tweaks */\n@media (max-width: 420px) {\n  .login-card {\n    padding: 20px;\n  }\n\n  .title {\n    font-size: 1.2rem;\n  }\n}\n</style>\n\n\n<script>\nimport { getDoc, doc } from 'firebase/firestore';\nimport { db, auth } from '../../firebase/firebase';\nimport { signInWithEmailAndPassword } from 'firebase/auth';\n\nexport default {\n    name: \"OrganizzatoreLogin\",\n    data() {\n        return {\n            email: \"\",\n            password: \"\"\n        }\n    },\n    methods: {\n        async login() {\n            try {\n                const cred = await signInWithEmailAndPassword(\n                    auth, this.email, this.password\n                )\n                \n                const userDoc = await getDoc(doc(db, \"organizzatori\", cred.user.uid));\n                console.log(userDoc)\n\n                localStorage.setItem(\"organizzatoreId\", cred.user.uid)\n                this.$router.push({name: \"AreaOrganizzatore\"})\n            } catch (error) {\n                console.log(error);\n            }\n        }\n    },\n    mounted() {\n    }\n}\n</script>"],"mappings":";AAuKA,SAASA,MAAM,EAAEC,GAAE,QAAS,oBAAoB;AAChD,SAASC,EAAE,EAAEC,IAAG,QAAS,yBAAyB;AAClD,SAASC,0BAAyB,QAAS,eAAe;AAE1D,eAAe;EACXC,IAAI,EAAE,oBAAoB;EAC1BC,IAAIA,CAAA,EAAG;IACH,OAAO;MACHC,KAAK,EAAE,EAAE;MACTC,QAAQ,EAAE;IACd;EACJ,CAAC;EACDC,OAAO,EAAE;IACL,MAAMC,KAAKA,CAAA,EAAG;MACV,IAAI;QACA,MAAMC,IAAG,GAAI,MAAMP,0BAA0B,CACzCD,IAAI,EAAE,IAAI,CAACI